<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6</TargetFrameworks>
    <RootNamespace>AppCore.Hosting.Plugins.AspNetCore.Mvc</RootNamespace>
    <AssemblyName>AppCore.Hosting.Plugins.AspNetCore.Mvc</AssemblyName>
    <Description>Provides AppCore .NET plugin hosting implementations for ASP .NET Core MVC.</Description>
    <OutputType>library</OutputType>
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AppCore.Diagnostics.Sources" Version="$(AppCore_Shared_Version)">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="AppCore.TypeHelpers.Sources" Version="$(AppCore_Shared_Version)">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AppCore.Extensions.Hosting.Plugins\AppCore.Extensions.Hosting.Plugins.csproj" />
  </ItemGroup>

</Project>
