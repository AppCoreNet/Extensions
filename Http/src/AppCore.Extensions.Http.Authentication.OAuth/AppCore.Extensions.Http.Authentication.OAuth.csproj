<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net462</TargetFrameworks>
    <Description>
      Adds support to AppCore.Extensions.Http.Authenticaton for authenticating a HttpClient using OAuth2 bearer tokens.
    </Description>
    <PackageTags>$(PackageTags);Security;Authentication;OAuth;OAuth2;OAuth 2.0;IdentityModel</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\AppCore.Extensions.Http.Authentication\AppCore.Extensions.Http.Authentication.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AppCore.Diagnostics.Sources" Version="$(AppCore_Shared_Version)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="$(Microsoft_Extensions_Version)" />
    <PackageReference Include="IdentityModel" Version="6.0.0" />
  </ItemGroup>
  
</Project>
